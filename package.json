{
  "name": "animere",
  "version": "1.16.1",
  "description": "CSS-driven scroll-based animations",
  "files": [
    "dist"
  ],
  "main": "./dist/animere.umd.js",
  "module": "./dist/animere.es.js",
  "exports": {
    ".": {
      "import": "./dist/animere.es.js",
      "require": "./dist/animere.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly && shx rm -rf dist/docs",
    "build:docs": "vite build --mode docs",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "node scripts/release.js",
    "prepare": "husky install",
    "prepublishOnly": "tsc --noEmit && npm run build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/animere.git"
  },
  "keywords": [
    "animation",
    "animate.css",
    "on-scroll",
    "scroll-animation",
    "scroll-story"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/animere/issues"
  },
  "homepage": "https://github.com/johannschopplich/animere#readme",
  "devDependencies": {
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "colorette": "^2.0.16",
    "conventional-changelog-cli": "^2.1.1",
    "duecss": "^0.12.7",
    "eslint": "^8.3.0",
    "eslint-config-prettier": "^8.3.0",
    "execa": "^5.1.1",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.1",
    "prettier": "2.4.1",
    "prompts": "^2.4.2",
    "sass": "^1.43.4",
    "semver": "^7.3.5",
    "shx": "^0.3.3",
    "typescript": "^4.5.2",
    "unocss": "^0.11.4",
    "vite": "^2.6.14"
  }
}
