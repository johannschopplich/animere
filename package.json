{
  "name": "animere",
  "version": "1.14.1",
  "description": "CSS-driven scroll-based animations",
  "files": [
    "dist"
  ],
  "main": "./dist/animere.umd.js",
  "module": "./dist/animere.es.js",
  "exports": {
    ".": {
      "import": "./dist/animere.es.js",
      "require": "./dist/animere.umd.js"
    }
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly && shx rm -rf dist/docs",
    "build:docs": "vite build --mode docs",
    "test": "echo \"No test specified\"",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "prepublishOnly": "tsc --noEmit && npm run build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/animere.git"
  },
  "keywords": [
    "animation",
    "animate.css",
    "on-scroll",
    "scroll-animation",
    "scroll-story"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/animere/issues"
  },
  "homepage": "https://github.com/johannschopplich/animere#readme",
  "devDependencies": {
    "@types/node": "^16.10.3",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.2",
    "lint-staged": "^11.2.3",
    "prettier": "2.4.1",
    "shx": "^0.3.3",
    "typescript": "^4.4.3",
    "vite": "^2.6.7"
  }
}
