{
  "name": "animere",
  "version": "1.16.3",
  "description": "CSS-driven scroll-based animations",
  "keywords": [
    "animation",
    "animate.css",
    "on-scroll",
    "scroll-animation",
    "scroll-story"
  ],
  "homepage": "https://github.com/johannschopplich/animere#readme",
  "bugs": {
    "url": "https://github.com/johannschopplich/animere/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/animere.git"
  },
  "license": "MIT",
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/animere.es.js",
      "require": "./dist/animere.umd.js"
    }
  },
  "main": "./dist/animere.umd.js",
  "module": "./dist/animere.es.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc --emitDeclarationOnly && shx rm -rf dist/docs",
    "build:docs": "vite build --mode docs",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "esno scripts/release.ts",
    "prepublishOnly": "tsc --noEmit && npm run build"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint",
      "prettier --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "devDependencies": {
    "@types/node": "^17.0.21",
    "@types/prompts": "^2.4.0",
    "@types/semver": "^7.3.9",
    "@typescript-eslint/eslint-plugin": "^5.14.0",
    "@typescript-eslint/parser": "^5.14.0",
    "@unocss/transformer-directives": "^0.27.2",
    "conventional-changelog-cli": "^2.2.2",
    "duecss": "^0.23.4",
    "eslint": "^8.10.0",
    "eslint-config-prettier": "^8.5.0",
    "esno": "^0.14.1",
    "execa": "^6.1.0",
    "lint-staged": "^12.3.5",
    "minimist": "^1.2.5",
    "picocolors": "^1.0.0",
    "prettier": "2.5.1",
    "prompts": "^2.4.2",
    "sass": "^1.49.9",
    "semver": "^7.3.5",
    "shx": "^0.3.4",
    "simple-git-hooks": "^2.7.0",
    "typescript": "^4.6.2",
    "unocss": "^0.27.2",
    "vite": "^2.8.6"
  }
}
