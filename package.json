{
  "name": "animere",
  "version": "1.9.0",
  "description": "CSS-driven scroll-based animations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "docs": "cp dist/index.js docs/js/animere.js",
    "minify": "terser dist/index.js -c -m -o dist/index.min.js",
    "dev": "tsc --watch",
    "build": "tsc && npm run minify && npm run docs",
    "size": "cat dist/index.min.js | gzip | wc -c",
    "test": "echo \"No test specified\""
  },
  "dependencies": {
    "animate.css": "^4.1.1"
  },
  "devDependencies": {
    "terser": "^5.6.0",
    "typescript": "^4.2.3"
  },
  "files": [
    "dist/*",
    "src/*",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/johannschopplich/animere.git"
  },
  "keywords": [
    "animation",
    "animate.css",
    "on-scroll",
    "scroll-animation",
    "scroll-story"
  ],
  "author": {
    "name": "Johann Schopplich",
    "email": "pkg@johannschopplich.com",
    "url": "https://johannschopplich.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/johannschopplich/animere/issues"
  },
  "homepage": "https://github.com/johannschopplich/animere#readme"
}
